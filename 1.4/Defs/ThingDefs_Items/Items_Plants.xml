<Defs>

    <ThingDef ParentName="RoughPlantBase">
        <defName>TM_DarkBerries</defName>
        <label>dark berries</label>
        <description>Raw dark berries harvested from a dark berry bush.</description>
        <possessionCount>10</possessionCount>
        <graphicData>
            <texPath>Things/Plant/TM_RawDarkBerries</texPath>
        </graphicData>
        <statBases>
            <MarketValue>0.5</MarketValue>
            <Flammability>1.3</Flammability>
        </statBases>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>30</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
        <thingCategories>
            <li>PlantMatter</li>
        </thingCategories>
        <ingestible>
            <preferability>DesperateOnly</preferability>
            <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
        </ingestible>
    </ThingDef>

    <ThingDef ParentName="RoughPlantBase">
        <defName>TM_Broots</defName>
        <label>broots</label>
        <description>Raw broots. Broots are highly poisonous and storing them near food ingredients may end up in accidental poisoning.</description>
        <possessionCount>10</possessionCount>
        <graphicData>
            <texPath>Things/Plant/TM_RawBroots</texPath>
        </graphicData>
        <statBases>
            <MarketValue>0.5</MarketValue>
            <Flammability>1.3</Flammability>
        </statBases>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>30</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
            <li Class="ArgonicCore.Comps.CompProperties_Contaminable">
                <isBaseContaminator>true</isBaseContaminator>
                <contaminationPower>0.75</contaminationPower>
                <hediffs>
                    <li>TM_BrootPoisoning</li>
                </hediffs>
            </li>
        </comps>
        <thingCategories>
            <li>PlantMatter</li>
        </thingCategories>
        <ingestible>
            <preferability>NeverForNutrition</preferability>
            <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
        </ingestible>
    </ThingDef>

