        <graphicData>
            <texPath>Things/Item/Teas/TM_Tea_Orange</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.85</drawSize>
        </graphicData>
        <stackLimit>5</stackLimit>
        <statBases>
            <MarketValue>120</MarketValue>
