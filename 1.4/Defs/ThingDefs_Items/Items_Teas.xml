        </ingestible>
        <costList>
            <TM_RedPetals>10</TM_RedPetals>
            <TM_Shrooms>5</TM_Shrooms>
        </costList>
        <thingCategories>
            <li>ItemsMisc</li> <!-- TODO: Category -->
