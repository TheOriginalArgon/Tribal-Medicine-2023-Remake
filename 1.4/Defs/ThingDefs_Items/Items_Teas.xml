        </ingestible>
        <costList>
            <PsychoidLeaves>25</PsychoidLeaves>
            <TM_Broots>10</TM_Broots>
        </costList>
        <thingCategories>
            <li>ItemsMisc</li> <!-- TODO: Category -->
        </thingCategories>
        <tradeability>Sellable</tradeability>
        <comps>
